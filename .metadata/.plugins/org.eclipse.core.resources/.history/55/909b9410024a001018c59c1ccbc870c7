#include "stm32l4xx.h"
#include "adc.h"

#define GPIOAEN		(1U << 0U)

void ADC_Init(void)
{
	/* Enable clock access to GPIOA */
	RCC->AHB2ENR |= GPIOAEN;

	/* Configure the ADC GPIO pin (PA1 as analog input) */
	GPIOA->MODER |= (1U << 2U);
	GPIOA->MODER |= (1U << 3U);

	/* Enable clock access to ADC1 */
	RCC->AHB2ENR |= UART2EN;

}

